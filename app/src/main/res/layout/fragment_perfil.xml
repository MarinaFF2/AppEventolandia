<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".comun.PerfilFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="680dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_perfil"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_perfil"
            android:textAlignment="center"
            android:textSize="@dimen/sizeTitle"/>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgFotoPerfil"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/campo_name_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/text_name_perfil"
            android:textSize="@dimen/sizeCampos"/>

        <EditText
            android:id="@+id/edit_name_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:backgroundTint="@color/colorPrimary"
            android:hint="@string/hint_name_perfil" />

        <TextView
            android:id="@+id/campo_email_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/text_email_perfil"
            android:textSize="@dimen/sizeCampos" />

        <EditText
            android:id="@+id/edit_email_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="@string/hint_email_perfil"
            android:backgroundTint="@color/colorPrimary"/>

        <TextView
            android:id="@+id/campo_pwd_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/text_pwd_perfil"
            android:textSize="@dimen/sizeCampos" />

        <EditText
            android:id="@+id/edit_pwd_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="@string/hint_pwd_perfil"
            android:inputType="textPassword"
            android:backgroundTint="@color/colorPrimary"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatCamaraPerfil"
            style="@android:style/Widget.Material.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="#EE3C3737"
            android:clickable="true"
            android:src="@android:drawable/ic_menu_camera"
            app:backgroundTint="#EE3C3737"
            app:rippleColor="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/button_save_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/text_Icons"
        android:text="@string/button_save_perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout >